<div class="container">
  <div class="row">
    <div class="col-md-5 col-centered">
      <section class="widget">
        <header>
          <h3 class="widget-title text-uppercase text-center">Ingresar </h3>
        </header>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-horizontal form-label-left"}) do |f| %>
            <fieldset>
              <div class="form-group">
                <label class="control-label col-md-4" for="name">E-Mail</label>
                <div class="col-md-8">
                  <div class="input-group">
                    <span class="input-group-addon">
                        <i class="fa fa-user"></i>
                    </span>
                    <%= f.email_field :name, class: "form-control input-transparent", required: "required" %>
                  </div>
                </div>
              </div>
              <div class="form-group">
                <label class="control-label col-md-4" for="name">ContraseÃ±a</label>
                <div class="col-md-8">
                  <div class="input-group">
                    <span class="input-group-addon">
                        <i class="fa fa-lock"></i>
                    </span>
                    <%= f.password_field :password, class: "form-control input-transparent", required: "required", html: {autocomplete: "off"} %>
                  </div>
                </div>
              </div>
            </fieldset>
            <div class="row login-action">
              <button type="submit" class="btn btn-login col-md-5 text-uppercase" style="height: 40px">Ingresar</button>
              <a href="<%= new_registration_path(resource_name) %>" class="btn btn-signout col-md-5 text-uppercase" style="height: 40px">Registrarse</a>
            </div>
            <%- if devise_mapping.omniauthable? %>
                <div class="social-share login-social">
                  <ul class="text-center text-center">
                    <%- resource_class.omniauth_providers.each do |provider| %>
                        <li><a class="s-facebook" href="<%= omniauth_authorize_path(resource_name, provider) %>"><i class="fa fa-<%= OmniAuth::Utils.camelize(provider).downcase.gsub(' ', '-').gsub('oauth2', '-plus') %>"></i></a></li>
                    <% end -%>
                  </ul>
                </div>
            <% end -%>
        <% end %>
      </section>
    </div>
  </div>
</div>
