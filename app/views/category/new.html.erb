<div class="container">
  <div class="row">
    <div class="col-md-8 col-centered">
      <section class="widget">
        <header>
          <h3 class="form-title text-uppercase">Nueva Categoria</h3>
        </header>
        <%= form_for(@category, url: category_index_path, html: {class: "form-horizontal form-label-left"}) do |f| %>
          <fieldset>
            <legend class="section form-legend">
              <i class="fa fa-check-square-o"></i> Parametros <strong>requeridos</strong> para crear una nueva categoria.
            </legend>
            <div class="form-group">
              <label class="control-label col-md-4" for="name">Nombre</label>
              <div class="col-md-8">
                <%= f.text_field :name, class: "form-control input-transparent", required: "required" %>
              </div>
            </div>
          </fieldset>
          <fieldset>
            <legend class="section form-legend">
              <i class="fa fa-square-o"></i> Parametros <strong>opcionales</strong> para crear una nueva categoria.
            </legend>
            <div class="form-group">
              <label class="control-label col-md-4" for="description">
                Descripci√≥n
              </label>
              <div class="col-md-8">
                <%= f.text_field :description, class: "form-control input-transparent" %>
              </div>
            </div>
            <div class="form-group">
              <label class="control-label col-md-4" for="image">
                Imagen
              </label>
              <div class="col-md-8">
                <div class="input-group">
                  <%= f.text_field :image, class: "form-control input-transparent fa-icon-selector" %>
                                            <span class="input-group-addon">
                                                <i class="fa"></i>
                                            </span>
                </div>
              </div>
            </div>
            <div class="form-group">
              <label class="control-label col-md-4" for="category_id">
                Categoria Contenedora
              </label>
              <div class="col-md-8">
                <%= f.select :category_id, options_for_select(Category.all.collect { | category | [category.name, category.id]}), {:include_blank => '-'}, { class: "form-control hiden selectpicker", 'data-live-search' => 'true', 'data-style' => 'btn-warning'} %>
              </div>
            </div>
          </fieldset>
          <div class="row form-action">
            <div class="col-md-8 col-md-offset-4">
              <a href="<%= category_index_path %>" class="btn btn-default btn-form btn-form-end">Cancelar</a>
              <button type="submit" class="btn btn-success btn-form">Crear</button>
            </div>
          </div>
        <% end %>
      </section>
    </div>
  </div>
</div>